<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GanheiNaMega" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/darkGreen</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/lightGreen</item>
        <item name="colorOnPrimaryContainer">@color/blackGreen</item>

        <item name="android:statusBarColor">?attr/colorPrimaryContainer</item>
    </style>

    <style name="Theme.GanheiNaMega" parent="Base.Theme.GanheiNaMega" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/brightGreen</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.GanheiNaMega</item>
    </style>
</resources>